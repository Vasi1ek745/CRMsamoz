<div class="d-flex flex-row bd-highlight">
	<div class = "m-2 p-2 bd-highlight">
		<h1>All students</h1>
	</div>
	<div class="bd-highlight m-2 p-2">
		<%= link_to 'New Student', new_student_path , class: "btn btn-secondary btn-lg " %>

	</div>

</div>




<div >
	<% @student.each do |student| %>

		<div class="border border-2 shadow-2 m-2 p-2">
			<div class="m-2 p-2">
				
			<h3 class="mb-3"> <%= student.name %></h3>
			<p> <%= student.subject %></p>
			

			</div>
			<div>
				<p>
					<%= link_to 'Show', student_path(student.id) , class: "btn btn-outline-primary btn-sm" %>
					<%= link_to 'Edit', edit_student_path(student.id), class: "btn btn-outline-secondary btn-sm" %>
					<%= link_to 'Delete', student_path(student.id), class: "btn btn-outline-dark btn-sm", method: :delete , data: { confirm: "are you shure?"} %>
				</p>
			</div>
			
		</div>
	<% end %>
</div>
